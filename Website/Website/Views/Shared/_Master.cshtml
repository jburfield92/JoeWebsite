<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#NavBarLinks" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="NavBarLinks">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Blog" ? "active" : "")">@Html.ActionLink("Blog", "Blog", "Blog")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Projects" ? "active" : "")">@Html.ActionLink("Projects", "Projects", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Resume" ? "active" : "")">@Html.ActionLink("Resume", "Resume", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="form-group">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default" data-spy="affix" data-offset-top="100">
                    <div class="panel-body">
                        <div class="row">
                            <span class="panel-header">Contact</span>
                        </div>
                        <div class="row">
                            <strong><span class="form-control-static">Email:</span></strong>
                            <span>jburfield92@gmail.com</span>
                        </div>
                        <div class="row">
                            <strong><span class="form-control-static">LinkedIn:</span></strong>
                            <span>
                                <a href="https://www.linkedin.com/pub/joseph-burfield/93/911/b51" style="text-decoration:none;">
                                    <span style="font: 80% Arial,sans-serif; color:#0783B6;">
                                        <img src="https://static.licdn.com/scds/common/u/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="View My LinkedIn profile" style="vertical-align:middle;" border="0" />
                                        &nbsp;View my profile
                                    </span>
                                </a>
                            </span>
                        </div>
                        <div class="row">
                            <strong><span class="form-control-static">Stackoverflow:</span></strong>
                            <span>
                                <a href="http://stackoverflow.com/users/3330452/aznjoe" style="text-decoration:none;">
                                    <span style="font: 80% Arial,sans-serif; color:#0783B6;">
                                        <img src="~/Images/so-icon.png" width="20" height="20" alt="View my Stackoverflow Profile" style="vertical-align:middle;" border="0" />
                                        &nbsp;View my profile
                                    </span>
                                </a>
                            </span>
                        </div>
                        <div class="row">
                            <strong><span class="form-control-static">Twitter:</span></strong>
                            <span>
                                <a href="https://twitter.com/aznjoee" style="text-decoration:none;">
                                    <span style="font: 80% Arial,sans-serif; color:#0783B6;">
                                        <img src="~/Images/Twitter_Logo_Blue.png" width="20" height="20" alt="View my twitter" style="vertical-align:middle;" border="0" />
                                        &nbsp;View my twitter
                                    </span>
                                </a>
                            </span>
                        </div>
                        <div class="row">
                            <strong><span class="form-control-static">YouTube Channel:</span></strong>
                            <span>
                                <a href="https://www.youtube.com/channel/UCmCUfE7uFkhXYtkzvUNHblg" style="text-decoration:none;">
                                    <span style="font: 80% Arial,sans-serif; color:#0783B6;">
                                        <img src="~/Images/YouTube-logo-full_color.png" width="20" height="20" alt="View my YouTube Channel" style="vertical-align:middle;" border="0" />
                                        &nbsp;View my YouTube Channel
                                    </span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="footerWrap">
            &copy; @DateTime.Now.Year - Joe Burfield Personal Website
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
